<div class="container">  
    <div class="row">
      <div class="col s12 l8 offset-l2" id="signIn">
        <form class="sign-in-form" action="/users/login" method="POST">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username">
            </div>
            <div class="form-group">
                <label for="pass">Password:</label>
                <input type="password" id="pass" name="password">
            </div>
            <button class="btn-large waves-effect waves-light orange darken-1 hoverable center" type="submit">Sign In</button>
        </form>
      </div>  
    </div>
</div> 